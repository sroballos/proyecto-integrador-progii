<%- include("partials/headerNormal.ejs") %>
	
	<!-- Banner -->
	<img src="/images/bannerVinilos.png" alt="Banner de ofertas">
	<!-- /Banner -->
	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let h = 0; h < products.length; h++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= products[h].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= products[h].image %>" alt="Abbey Road">
							<% console.log(products) %>
						</figure>
						<article class="product-box_data">
							<h2><%= products[h].title %></h2>
							<p><%= products[h].artist %></p>
							<p>ID:<%= products[h].id %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
<!-- footer -->
<%- include("partials/footer.ejs") %>
<!-- /footer -->
</body>	
</html>