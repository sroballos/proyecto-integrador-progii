<%- include("partials/headerNormal.ejs") %>
	
	<!-- Banner -->
	<img src="/images/bannerVinilos.png" alt="Banner de ofertas">
	<!-- /Banner -->
	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades <%= info[1].id %></h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let h = 0; h < info.length; h++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= info[h].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= info[h].image %>" alt="Abbey Road">
							<% console.log(info) %>
						</figure>
						<article class="product-box_data">
							<h2><%= info[h].title %></h2>
							<p><%= info[h].artist %></p>
							<p>ID:<%= info[h].id %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
<!-- footer -->
<%- include("partials/footer.ejs") %>
<!-- /footer -->
</body>	
</html>