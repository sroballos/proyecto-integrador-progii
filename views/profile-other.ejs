<%- include("partials/headerLogueado.ejs") %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if(info.profilePic){ %>
				<img src="<% info.profilePic %>" alt="profilePic" class="profilePic">
				<% } else{ %>
				<img src="/images/users/default-image.png" alt="profilePic" class="profilePic">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= info.nombre %> 
						<a href="/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><strong><%= info.username %></strong></li>
						<li><%= info.products.length %> productos</li>
						<li>0 seguidores</li>
						<li>y comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < info.products.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= info.products[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= info.products[i].image %>" alt="<%= info.products[i].title %>">
						</figure>
						<article class="product-box_data">
							<h2><%= info.products[i].title %></h2>
							<p><%= info.products[i].description %></p>
							<p>Comentarios: XX</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


<!-- footer -->
<%- include("partials/footer.ejs") %>
<!-- /footer -->
</body>	
</html>