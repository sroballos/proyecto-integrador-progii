<%- include("partials/headerNormal.ejs") %>

<!-- Contenido -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Registrarse</h2>
            <form action="/user/register" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de Usuario:</label>
                    <input type="text" id="username" name="username" value="<%= locals.old && old.username ? old.username : ""%>" required>
                </div>
                <div class="form-group">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" value="<%= locals.old && old.email ? old.email : ""%>" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="fechaNacimiento">Fecha de Nacimiento:</label>
                    <input type="date" id="fechaNacimiento" name="fechaNacimiento">
                </div>
                <div class="form-group">
                    <label for="nroDocumento">Número de Documento:</label>
                    <input type="number" id="nroDocumento" name="nroDocumento">
                </div>
                <div class="form-group">
                    <label for="fotoPerfil">Foto de Perfil:</label>
                    <input type="text" id="fotoPerfil" name="fotoPerfil">
                </div>
                <button type="submit">Registrarse</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>
