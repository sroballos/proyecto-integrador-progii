<%- include("partials/headerNormal.ejs") %>

<!-- Contenido -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="registrarse">Registrarse</h2>

			<% if (locals && locals.errors) { %>	
				<% for (let error in errors) { %>
					<p class="errores"> <%= errors[error].msg %> </p>
				<% } %>
			<% } %>

			<form action="/profile/register" method="POST">
				<div class="form-group">

					<label for="username">Nombre de usuario:</label>
					<input type="text" name="username" 
					id="username" value="<%= locals.old && old.
					username ? old.username : ""%>">
				
				</div>

				<div class="form-group">

					<label for="email">Email:</label>
					<input type="email" name="email" 
					id="email" value="<%= locals.old && old.
					email ? old.email : ""%>" >

				</div>
				
				<div class="form-group">

					<label for="passW">Contrase√±a:</label>
					<input type="password" name="passW" id="passW">
					
				</div>

				<div class="form-group">

					<label for="dateBorn">Fecha de nacimiento:</label>
					<input type="date" name="dateBorn"
					id="dateBorn" value="<%= locals.old && old.
					dateBorn ? old.dateBorn : ""%>" >

				</div>

				<div class="form-group">

					<label for="dni">DNI:</label>
					<input type="number" name="dni" 
					id="dni" value="<%= locals.old && old.
					dni ? old.dni : ""%>" >

				</div>

				<div class="form-group">

					<label for="profilePic">Foto de perfil (URL):</label>
					<input type="text" name="profilePic"
					id="profilePic" value="<%= locals.old && old.
					profilePic ? old.profilePic : ""%>" >

				</div>
				
				<button type="submit">Registrarse</button>

			</form>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>
