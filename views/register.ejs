<%- include("partials/headerNormal.ejs") %>

<!-- Contenido -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Registrarse</h2>
			<form action="/users/register" method="POST">
				<div>
					<label for="username">Nombre de usuario:</label>
					<input type="text" id="username" name="username" required>
					<% if (errors && errors.username) { %>
						<p><%= errors.username.msg %></p>
					<% } %>
				</div>
				<div>
					<label for="email">Email:</label>
					<input type="email" id="email" name="email" required>
					<% if (errors && errors.email) { %>
						<p><%= errors.email.msg %></p>
					<% } %>
				</div>
				<div>
					<label for="passW">Contrase√±a:</label>
					<input type="password" id="passW" name="passW" required>
					<% if (errors && errors.passW) { %>
						<p><%= errors.passW.msg %></p>
					<% } %>
				</div>
				<div>
					<label for="dateBorn">Fecha de nacimiento:</label>
					<input type="date" id="dateBorn" name="dateBorn" required>
					<% if (errors && errors.dateBorn) { %>
						<p><%= errors.dateBorn.msg %></p>
					<% } %>
				</div>
				<div>
					<label for="dni">DNI:</label>
					<input type="number" id="dni" name="dni" required>
					<% if (errors && errors.dni) { %>
						<p><%= errors.dni.msg %></p>
					<% } %>
				</div>
				<div>
					<label for="profilePic">Foto de perfil (URL):</label>
					<input type="text" id="profilePic" name="profilePic">
					<% if (errors && errors.profilePic) { %>
						<p><%= errors.profilePic.msg %></p>
					<% } %>
				</div>
				<button type="submit">Registrarse</button>
			</form>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>
